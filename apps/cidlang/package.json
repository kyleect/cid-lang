{
  "name": "cidlang",
  "version": "1.0.0",
  "description": "CID Language Runtime",
  "bin": {
    "cidlang": "dist/cidlang.js"
  },
  "scripts": {
    "tsup": "tsup",
    "dev": "npm run build -- --watch --onSuccess \"npm run start\"",
    "build-src": "rm -rf dist/lib && tsup src/cidlang.ts -d dist/lib --minify --shims --format cjs --treeshake recommended --no-splitting",
    "start": "node dist/cidlang.js",
    "build-bins": "npx pkg dist/lib/cidlang.js --out-path=dist/bins",
    "format": "npx prettier --write .",
    "lint": "npx eslint .",
    "build": "npm run build-src && npm run build-bins"
  },
  "author": "Kylee Tilley",
  "license": "MIT",
  "dependencies": {
    "cidlib": "*"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "pkg": "^5.8.1",
    "prettier": "^2.8.4",
    "ts-node": "^10.7.0",
    "tsup": "^6.0.1",
    "turbo": "^1.10.13",
    "typescript": "^4.9.5"
  }
}
