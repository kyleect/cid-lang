{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build-src": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/lib/**"]
    },
    "build-bins": {
      "inputs": ["dist/lib/*.js"],
      "outputs": [
        "dist/bins/cidlang-linux",
        "dist/bins/cidlang-macos",
        "dist/bins/cidlang-win.exe",
        "dist/bins/cidrepl-linux",
        "dist/bins/cidrepl-macos",
        "dist/bins/cidrepl-win.exe"
      ],
      "dependsOn": ["build-src"]
    },
    "lint": {},
    "test": {},
    "typecheck": {
      "inputs": ["src/**/*.ts"]
    },
    "coverage": {
      "outputs": ["coverage/**"]
    }
  }
}
